@model StudentsWebsite.WebUI.Models.StudentViewModel[]
@{
    ViewBag.Title = "Лучшие студенты";
    ViewBag.PageHeader = "Студенты с баллом выше среднего";
    Layout = "~/Views/_MainLayout.cshtml";
}

<table class="table display" id="students">
    <thead>
        <tr>
            <th>#</th>
            <th>Средний балл</th>
            <th>Студент</th>
        </tr>
    </thead>
    <tbody>
        @{var num = 1;}
        @foreach (var m in Model)
        {
            <tr>
                <td>@num</td>
                <td>@m.AverageRating</td>
                <td>
                   
                        <a class="btn btn-default btn-xs" href="~/Students/Edit?userName=@m.UserName">
                            <span class="glyphicon glyphicon-pencil"></span>
                        </a>
                    
                        <a class="btn btn-default btn-xs" href="~/Students/Card?userName=@m.UserName">
                            <span class="glyphicon glyphicon-user"></span>
                        </a>
                    
                    @m.FullName
                </td>
            </tr>
            num++;
        }
    </tbody>
</table>

<div>
    Средний балл по всем студентам: @ViewBag.TotalAverage
</div>

<script>
    $(document).ready(function () {
        $('#students').DataTable({
            "lengthMenu": [[20, 50, 100, -1], [20, 50, 100, "Все"]]
        });
    });
</script>