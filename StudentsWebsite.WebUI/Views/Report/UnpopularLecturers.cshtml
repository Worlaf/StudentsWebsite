@model StudentsWebsite.WebUI.Models.LecturerViewModel[]
@{
    ViewBag.Title = "Непопулярные преподаватели";
    ViewBag.PageHeader = "Преподаватели, предметы которых посещает меньше всех студентов";
    Layout = "~/Views/_MainLayout.cshtml";
}

<table class="table display" id="students">
    <thead>
        <tr>
            <th>#</th>
            <th>Количество студентов</th>
            <th>Предмет</th>
            <th>Преподаватель</th>
        </tr>
    </thead>
    <tbody>
        @{var num = 1;}
        @foreach (var m in Model)
        {
            <tr>
                <td>@num</td>
                <td>@m.StudentsCount</td>
                <td>@m.Subject</td>
                <td>

                    <a class="btn btn-default btn-xs" href="~/Lecturers/Edit?userName=@m.UserName">
                        <span class="glyphicon glyphicon-pencil"></span>
                    </a>

                    <a class="btn btn-default btn-xs" href="~/Lecturers/Card?userName=@m.UserName">
                        <span class="glyphicon glyphicon-user"></span>
                    </a>

                    @m.FullName
                </td>
            </tr>

        }
    </tbody>
</table>



<script>
    $(document).ready(function () {
        $('#students').DataTable({
            "lengthMenu": [[20, 50, 100, -1], [20, 50, 100, "Все"]]
        });
    });
</script>